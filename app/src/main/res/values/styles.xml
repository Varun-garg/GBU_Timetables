<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
        <!--        <item name="windowSplashScreenBackground">@color/theme_pink</item>-->
        <!--        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>-->
        <!--        <item name="windowSplashScreenAnimationDuration">200</item>-->
        <!--        <item name="postSplashScreenTheme">@style/Theme.AppCompat.Light.NoActionBar</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="box_bg">@color/box_bg</item>
        <item name="app_bg">@color/app_bg</item>
        <item name="app_bg_lighter_on_light_theme">@color/main_activity_bg</item>
        <item name="app_bg_pure_white_or_black">@color/app_bg_pure_white_or_black</item>
        <item name="theme_green">@color/theme_green</item>
        <item name="theme_pink">@color/theme_pink</item>

    </style>


    <style name="LightTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark">


        <item name="colorPrimary">@color/DarkThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/DarkThemeColorPrimaryDark</item>
        <item name="colorAccent">@color/DarkThemeColorAccent</item>
        <item name="box_bg">@color/box_bg_dark</item>
        <item name="app_bg">@color/app_bg_dark</item>
        <item name="app_bg_lighter_on_light_theme">@color/main_activity_bg_dark</item>
        <item name="app_bg_pure_white_or_black">@color/app_bg_pure_white_or_black_dark</item>
        <item name="theme_green">@color/theme_green_dark</item>
        <item name="theme_pink">@color/theme_pink_dark</item>

        <item name="android:textColorSecondary">#f0f4c3</item>
        <item name="android:textColorTertiary">#f0f4c3</item>
    </style>


    <style name="GBURed" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPinkGBT</item>
        <item name="colorPrimaryDark">@color/colorPinkDarkGBT</item>
        <item name="colorAccent">@color/colorPinkGBT</item>
        <item name="box_bg">@color/box_bg</item>
        <item name="app_bg">@color/colorLightPinkGBT</item>
        <item name="theme_green">#19E91E63</item>
        <item name="theme_pink">@color/theme_pink</item>
        <item name="app_bg_lighter_on_light_theme">@color/main_activity_bg</item>
        <item name="app_bg_pure_white_or_black">@color/app_bg_pure_white_or_black</item>
    </style>


</resources>
